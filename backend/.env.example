# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_secure_password

# Database Name
DB_NAME=TT_Mobile

# JWT Configuration
# IMPORTANT: Generate a strong secret key for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_very_long_and_secure_secret_key_here_at_least_64_characters
JWT_EXPIRES_IN=24h

# API Configuration
API_PREFIX=/api/v1

# Seed Database (set to true to seed on first run)
SEED_DB=true

# CORS - Allowed Origins (comma-separated for production)
# Example: https://yourdomain.com,https://admin.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

